@{
    ViewBag.Title = "OrgInfo";
}
@section scripts{
    <script>
        $(function () {
            var ajaxHelper = new AjaxHelper();
            layui.use(['laydate', 'layer', 'element', 'form', 'laytpl'], function () {
                var laydate = layui.laydate, layer = layui.layer, element = layui.element, form = layui.form, $ = layui.jquery, laytpl = layui.laytpl;
               
                var start = {
                    min: laydate.now
                  , max: '2099-06-16 23:59:59'
                  , istoday: false
                  , choose: function (datas) {
                      end.min = datas; //开始日选好后，重置结束日的最小日期
                      end.start = datas //将结束日的初始值设定为开始日
                  }
                };

                var end = {
                    min: laydate.now
                  , max: '2099-06-16 23:59:59'
                  , istoday: true
                  , choose: function (datas) {
                      start.max = datas; //结束日选好后，重置开始日的最大日期
                  }
                };
                laydate.render({
                    elem: '#test1'
                });
                laydate.render({
                    elem: '#test2'
                });
                $(function () {
                    var ddd = { str: '' };
                    selectchanged('', "Province");
                });
                //下拉框绑定
                function selectchanged(parentid,elem)
                {
                    if (elem!="") {
                        $("#" + elem + "").empty();
                    }                 
                    
                    var ddd = { str: parentid }
                    ajaxHelper.post("/BasicSys/OrgInfos/", ddd, function (da) {
                        var jsonObj = JSON.parse(da);
                        var getTpl = $("#tuserinfo").html()
                            , view = $("#t_UserInfo");
                        if (elem != "") {
                            var getTpl2 = $("#orginfo").html()
                                , view2 = $("#" + elem + "");
                        }
                        if (jsonObj.result) {
                            if (jsonObj.data.length > 0) {
                                laytpl(getTpl).render(jsonObj.data, function (a) {
                                    $(view).html(a);
                                });
                                if (elem != "") {
                                    laytpl(getTpl2).render(jsonObj.data, function (a2) {
                                        $(view2).html(a2);
                                    });
                                }
                            }
                        }
                        else {
                            $("#t_UserInfo").html("");
                        }
                        form.render();
                    });
                }
                form.on('select(Province)', function (data) {
                    $("#CompanyCity").empty();
                    document.getElementById('CompanyCity').innerHTML = "";
                    document.getElementById('CompanyUnderCity').innerHTML = "";
                    document.getElementById('CompanyUnderArea').innerHTML = "";
                    $("#CompanyUnderCity").empty();
                    $("#CompanyUnderArea").empty();
                    $("#t_UserInfo").html("");
                    var parentid = $("#Province option:selected").val();
                    if (parentid == "") {
                        return false;
                    }
                    else {
                        selectchanged(parentid, "CompanyCity");
                    }
                    return false;
                });
                form.on('select(CompanyCity)', function (data) {
                    $("#CompanyUnderCity").html("");
                    $("#CompanyUnderArea").html("");
                    $("#t_UserInfo").html("");
                    var parentid = $("#CompanyCity option:selected").val();
                    if (parentid == "") {
                        return false;
                    }
                    selectchanged(parentid, "CompanyUnderCity");
                    return false;
                });
                form.on('select(CompanyUnderCity)', function (data) {
                    $("#CompanyUnderArea").html("");
                    $("#t_UserInfo").html("");
                    var parentid = $("#CompanyUnderCity option:selected").val();
                    if (parentid == "") {
                        return false;
                    }
                    selectchanged(parentid, "CompanyUnderArea");
                    return false;
                });
                form.on('select(CompanyUnderArea)', function (data) {
                    $("#t_UserInfo").html("");
                    var parentid = $("#CompanyUnderArea option:selected").val();
                    if (parentid == "") {
                        return false;
                    }
                    selectchanged(parentid, "");
                    return false;
                });
                //全选
                form.on('checkbox(allChoose)', function (data) {
                    var child = $(data.elem).parents('table').find('tbody input[type="checkbox"]');
                    child.each(function (index, item) {
                        item.checked = data.elem.checked;
                    });
                    form.render('checkbox');
                });
                form.render();
                //新增数据
                $("#add").click(function () {
                    var Province = $("#Province option:selected").val();
                    var CompanyCity = $("#CompanyCity option:selected").val();
                    var CompanyUnderCity = $("#CompanyUnderCity option:selected").val();
                    var CompanyUnderArea = $("#CompanyUnderArea option:selected").val();
                    var orgid = 0; var fresh = "";
                    if (CompanyUnderArea == "" || CompanyUnderArea==undefined) {
                        if (CompanyUnderCity == "" || CompanyUnderCity == undefined) {
                            if (CompanyCity == "" || CompanyCity == undefined) {
                                if (Province == "" || Province == undefined) {
                                    orgid = 0;
                                    fresh = "Province";
                                }
                                else {
                                    orgid = Province;
                                    fresh = "Province";
                                }
                            }
                            else {
                                orgid = CompanyCity;
                                fresh = "CompanyCity";
                            }
                        }
                        else {
                            orgid = CompanyUnderCity;
                            fresh = "CompanyUnderCity";
                        }
                    }
                    else {
                        orgid = CompanyUnderArea;
                        fresh = "CompanyUnderArea";
                    }
                    layer.open({
                        type: 2,
                        title: '新增机构',
                        closeBtn: 1,
                        shade: [0],
                        area: ['400px', '200px'],
                        anim: 2,
                        moveOut: true,
                        content: ['/BasicSys/OrgInfo_AddEdit?ParentID=' + orgid, 'yes'],//iframe的url，no代表不显示滚动条
                        end: function () {
                            selectchanged('', fresh);
                        }
                    });
                });
                //编辑
                $("#edit").click(function () {
                    
                    var addeditcode = $("[name=table_ck]:checked:eq(0)").val();
                    if ($("#t_UserInfo").find("[name=table_ck]:checked").length == 0) {
                        layer.open({
                            title: '提示', content: '请勾选需要进行操作的数据!', time: 2000
                        });
                        return;
                    }
                    layer.open({
                        type: 2,
                        title: '修改机构',
                        closeBtn: 1,
                        shade: [0],
                        area: ['400px', '200px  '],
                        anim: 2,
                        moveOut: true,
                        content: ['/BasicSys/OrgInfo_AddEdit?ID=' + addeditcode, 'no'],//iframe的url，no代表不显示滚动条
                        end: function () {
                            selectchanged('', 'Province');
                        }
                    });
                });
                //批量删除
                $("#delete").click(function () {
                    if ($("#t_UserInfo").find("[name=table_ck]:checked").length == 0) {
                        layer.open({
                            title: '提示', content: '请勾选需要进行操作的数据!',time:2000
                        });
                        return false;
                    }
                    layer.confirm('确认要删除吗？', {
                        btn: ['是', '否', '取消'] //可以无限个按钮
                        , btn1: function (index, layero) {
                                 return false;
                        }
                    }, function (index, layero) {
                        var delkeys = "";
                        $("#t_UserInfo").find("[name=table_ck]:checked").each(function () {
                            delkeys += $(this).val() + ",";
                        });
                        delkeys = delkeys.substring(0, delkeys.length - 1);
                        var senddata = { str: delkeys };
                        ajaxHelper.post("/BasicSys/OrgInfo_Deletes/", senddata, function (da) {
                            var jsonObj = JSON.parse(da);
                            if (jsonObj.result) {
                                layer.open({
                                    title: '提示', content: jsonObj.data, time: 2000
                                });
                                selectchanged('', 'Province');
                            }
                            else {
                                layer.open({
                                    title: '提示', content: jsonObj.result, time: 2000
                                });
                            }
                        });
                    }, function (index, layero) {
                        return false;
                    }); 
                    return false;
                });
            });
        })
    </script>
}
<style>
    .layui-form-label {
        width: 120px;
    }
</style>
<script id="tuserinfo" type="text/html">
    {{#  layui.each(d, function(index, item){ }}
    <tr>
        <td><input type="checkbox" name="table_ck" value="{{item.OrgID}}" lay-filter="table_ck" lay-skin="primary" title=""></td>
        <td>{{item.OrgCode}}</td>
        <td>{{item.Name}}</td>
        <td>{{item.Address}}</td>
    </tr>
    {{#  }); }}
</script>
<script id="orginfo" type="text/html">
    <option value="">请选择</option>
    {{#  layui.each(d, function(index, item){ }}
    <option value="{{item.OrgID}}">{{item.Name}}</option>
    {{#  }); }}
</script>
<form class="layui-form" style="margin-top: 20px;">
    <div class="layui-form-item">
        <label class="layui-form-label">省</label>
        <div class="layui-input-inline">
            <select id="Province" lay-filter="Province" style="width:150px;" name="Province"></select>
        </div>
        <label class="layui-form-label">市分公司</label>
        <div class="layui-input-inline">
            <select id="CompanyCity" lay-filter="CompanyCity" style="width:150px;" name="CompanyCity"></select>
        </div>
        <label class="layui-form-label">县分公司</label>
        <div class="layui-input-inline">
            <select id="CompanyUnderCity" style="width:150px;" lay-filter="CompanyUnderCity" name="CompanyUnderCity"></select>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">网点</label>
        <div class="layui-input-inline">
            <select id="CompanyUnderArea" style="width:150px;" lay-filter="CompanyUnderArea" name="CompanyUnderArea"></select>
        </div>
        <button class="layui-btn layui-btn-warm" type="button" id="add">
            <i class="layui-icon">&#xe654;</i> 新增
        </button>
        <button class="layui-btn layui-btn-warm" type="button" id="edit">
            <i class="layui-icon">&#xe642;</i> 修改
        </button>
        <button class="layui-btn layui-btn-danger" id="delete">
            <i class="layui-icon">&#xe640;</i> 删除选中
        </button>
    </div>
</form>
<form class="layui-form">
    <table class="layui-table" id="maintb" style="width: 99%; margin-left: 5px;">
        <thead>
            <tr>
                <th><input type="checkbox" lay-filter="allChoose" lay-skin="primary" /></th>
                <td>编号</td>
                <td>名称</td>
                <td>地址</td>
            </tr>
        </thead>
        <tbody id="t_UserInfo"></tbody>
    </table>
</form>
