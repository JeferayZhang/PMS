<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PMS系统</title>
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <script src="~/Plugin/layui/layui.js"></script>
    <link href="~/Plugin/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Plugin/layui/css/public.css" rel="stylesheet" />
    <script type="text/javascript" src="/js/Normaljs.js"></script>
    <script src="~/JS/Common/AjaxHelper.js"></script>
    <script type="text/javascript" charset="utf-8">
        $(function () {
            var ajaxHelper = new AjaxHelper();

            layui.use([ 'layer', 'element', 'form'], function () {
                var  layer = layui.layer, element = layui.element, form = layui.form,
                    $ = layui.jquery;
                form.on('submit(exit)', function () {
                    var ddd = { str: '' };
                    ajaxHelper.post("/BasinSys/UserLoginOut/", ddd, function (da) {
                        top.location = "../Account/Login";
                        return false;
                    });
                    return false;
                });
                form.on('submit(add)', function (data) {
                    layer.open({
                        type: 2,
                        title: '修改个人信息',
                        closeBtn: 1,
                        shade: [0],
                        area: ['700px', '550px'],
                        anim: 2,
                        moveOut: true,
                        content: ['/BasicSys/UserInfo_AddEdit?addeditcode=' + addeditcode, 'no'],//iframe的url，no代表不显示滚动条
                        end: function () {
                            var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
                            parent.layer.close(index);  // 关闭layer
                        }
                    });
                });
            });
        });
    </script>
</head>

<body>
    <div class="layui-layout layui-layout-admin">
        <!-- 顶部 -->
        <div class="layui-header">
            <a href="/Home/Index" class="layui-hide-xs">
                <div class="layui-logo">PMS系统</div>
            </a>

            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item layui-hide-xs">
                    @{
                        PMS.Models.UserModel user = new PMS.Models.UserModel();
                        user = Session["UserModel"] as PMS.Models.UserModel;
                        if (user != null)
                        {
                            <a href="javascript:;" tag="@user._ID">
                               欢迎您,@user.Name
                            </a>
                            @*<dl class="layui-nav-child">
                                <dd>
                                    <form class="layui-form">
                                        <div class=" layui-form-item">
                                            <button class="layui-btn" lay-filter="add" lay-submit="" data-type="add">基本资料</button>
                                        </div>
                                    </form>
                                    <form class="layui-form">
                                        <div class=" layui-form-item">
                                            <button class="layui-btn" lay-filter="exit" lay-submit="" data-type="exit">退出登录</button>
                                        </div>
                                    </form>
                                </dd>
                            </dl>*@
                        }
}                    
                </li>
            </ul>
        </div>

        @RenderBody()

        <div class="layui-footer">

        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
